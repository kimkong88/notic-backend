model Token {
    id        String    @id @default(uuid())
    token     String    @unique
    expires   DateTime
    type      TokenType
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    userId    String
    user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([token, type])
    @@index([userId])
    @@index([expires])
}

enum TokenType {
    refresh
    billing
}
